<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.nijus.alino.bfwcoopmanagement.ui.activities.DetailFarmerActivity"
        tools:showIn="@layout/activity_details_farmer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10px">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gen_info_pic"
                        android:layout_width="40px"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/gen_title"
                        android:textAppearance="?android:attr/textAppearanceSmallInverse"
                        android:textColor="@color/activated"
                        android:textSize="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_marginBottom="15px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sex_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phone_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coop_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tot_land_f_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10px"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/acme"
                        android:gravity="left"
                        android:paddingBottom="15px"
                        android:text="TOTAL FARMER LAND"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/demo_pic_f_details"
                android:layout_width="40px"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/demo_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10px"
                android:gravity="left"
                android:text="@string/demographic"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textColor="@color/activated"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/house_hold_f_details"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/househol_head"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/household_member_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/household_members"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spouse_f_name_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/spouse_f_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spouse_last_name_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/spouse_last_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cell_phone_alt_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/cell_phone_alt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cell_carrier_f_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/cell_carrier"
                android:textStyle="bold" />
            <TextView
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/membership_id"
                android:textStyle="bold" />

        </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">



                    <LinearLayout
                        android:id="@+id/a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:text="@string/available_resources"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                                android:textColor="@color/activated"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1px"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text="@string/tractors"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text="@string/harv"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text="@string/dryer"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text="@string/sales"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text="@string/other"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text=""
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text=""
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="337dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="50px"
                                android:fontFamily="@font/acme"
                                android:gravity="left"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>
                        </LinearLayout>
                            </android.support.v7.widget.CardView>







                        </LinearLayout>
                    </LinearLayout>

                <!-- other side B-->

                <LinearLayout
                    android:id="@+id/b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:text="@string/main_water_source"
                                        android:textAlignment="center"
                                        android:textAppearance="?android:attr/textAppearanceSmallInverse"
                                        android:textColor="@color/activated"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1px"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/dam"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/well"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/borehole"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/river_stream"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/pipe_borne"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/irrigation"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/none"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="337dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="50px"
                                        android:fontFamily="@font/acme"
                                        android:gravity="left"
                                        android:text="@string/other"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>










                    </LinearLayout>
                </LinearLayout>











        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView >
