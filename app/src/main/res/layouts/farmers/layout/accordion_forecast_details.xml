<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/access_info_cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".farmers.ui.activities.NavigationActivity">

        <com.riyagayasen.easyaccordion.AccordionView
            android:id="@+id/forecast_accordion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            app:heading="This is a demo accordion"
            app:isAnimated="true"
            app:isPartitioned="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="Harverst Season 2017"
                            android:textAppearance="?android:attr/textAppearanceSmallInverse"
                            android:textColor="@color/activated"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/access_info_season_first2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1px"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/tot_plot_land_maize_prod"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tot_plot_land_maize_prod"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/expected_total_production_in_kg"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/expected_total_production_in_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="8"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/expected_sales_outside_the_ppp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/expected_sales_outside_the_ppp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="100"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/expected_post_harvest_loss_in_kg"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/expected_post_harvset_loss_in_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="0"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/total_coop_land_size_in_ha"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_coop_land_size_in_ha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/percent_coop_land_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/percent_coop_land_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/current_ftma_commitement_kg"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/current_ftma_commitement_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/farmer_contribution_ftma_com"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/farmer_contribution_ftma_com"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/farmers_expected_min_revenu"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/farmers_expected_min_revenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="23"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="10px"
                            android:layout_weight="5"
                            android:background="@color/cardview_shadow_end_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/min_flore_price_per_kg_in_rwf"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/min_flore_price_per_kg_in_rwf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:text="12.52"
                                 />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--  the second season-->

        </com.riyagayasen.easyaccordion.AccordionView>


    </LinearLayout>


</android.support.v7.widget.CardView>

