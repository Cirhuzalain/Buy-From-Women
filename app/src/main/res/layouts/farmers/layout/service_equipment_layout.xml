<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/available_resources"
                        android:textSize="16sp" />


                    <CheckBox
                        android:id="@+id/tractors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tractors" />

                    <CheckBox
                        android:id="@+id/harvester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/harv" />

                    <CheckBox
                        android:id="@+id/dryer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dryer" />

                    <CheckBox
                        android:id="@+id/thresher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/thresher" />

                    <CheckBox
                        android:id="@+id/safe_storage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/safe_storage" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/safe_storage_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/safe_storage"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/e_other_av_res"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/new_resources"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_resources"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_water_source"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <CheckBox
                        android:id="@+id/e_dam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dam" />

                    <CheckBox
                        android:id="@+id/e_well"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/well" />

                    <CheckBox
                        android:id="@+id/e_borehole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/borehole" />

                    <CheckBox
                        android:id="@+id/e_pipe_borne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pipe_borne" />

                    <CheckBox
                        android:id="@+id/e_river"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/river_stream" />

                    <CheckBox
                        android:id="@+id/e_irrigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/irrigation" />

                    <CheckBox
                        android:id="@+id/e_none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/none" />

                    <CheckBox
                        android:id="@+id/e_other_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s_other" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/other_water_source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/other"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>