<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".buyers.ui.activities.DetailBuyerActivity"
    tools:showIn="@layout/activity_detail_buyer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10px">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gen_info_pic"
                        android:layout_width="40px"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/gen_title"
                        android:textAppearance="?android:attr/textAppearanceSmallInverse"
                        android:textColor="@color/activated"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_marginBottom="15px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_b_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="Vendor name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phone_b_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/start_loan_date"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mail_b_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/loan_purpose"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/principal_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/princip_amount"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/interest_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/interest_rate"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/duration_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/duration_month"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fin_inst_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10px"
                        android:gravity="left"
                        android:text="@string/financial_institution"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="3">

                        <Button
                            android:id="@+id/schedule_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Schedule"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/payment_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Payment"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/save_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Save"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView >