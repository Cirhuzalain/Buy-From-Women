<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/access_info_cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".coops.ui.activities.CoopActivity">

        <com.riyagayasen.easyaccordion.AccordionView
            android:id="@+id/baseline_s_accordion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            app:heading="Title Access to info"
            app:isAnimated="true"
            app:isPartitioned="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="Harverst Season 2016"
                            android:textAppearance="?android:attr/textAppearanceSmallInverse"
                            android:textColor="@color/activated"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/qty_agregated_from_members"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/qty_agregated_from_members"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/cycle_h_at_price_per_kg"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/cycle_h_at_price_per_kg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/qty_purchaced_from_non_members"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/qty_purchaced_from_non_members"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/non_member_purchase_at_price_per_kg"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/non_member_purchase_at_price_per_kg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/rgcc_contact_under_ftma"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/rgcc_contact_under_ftma"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/qty_of_rgcc_contact"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/qty_of_rgcc_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/price_per_kg_sold_to_rgcc"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/price_per_kg_sold_to_rgcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/qty_slod_outside_rgcc"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/qty_slod_outside_rgcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>
                    <!--les check boxes-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/formal_buyer"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/formal_buyer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical|center_horizontal|center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/informal_buyer"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/informal_buyer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical|center_horizontal|center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/other"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/other_formal_buyer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical|center_horizontal|center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/price_per_kg_sold_outside_ftma"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/price_per_kg_sold_outside_ftma"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="78" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <!--  the second season-->

        </com.riyagayasen.easyaccordion.AccordionView>


    </LinearLayout>


</android.support.v7.widget.CardView>
