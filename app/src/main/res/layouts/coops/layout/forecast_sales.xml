<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/harvsetSeason"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/harvsetSeason"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/rgcc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rgcc" />

                    <CheckBox
                        android:id="@+id/prodev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prodev" />

                    <CheckBox
                        android:id="@+id/sasura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sasura" />

                    <CheckBox
                        android:id="@+id/aif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/aif" />

                    <CheckBox
                        android:id="@+id/eax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eax" />

                    <CheckBox
                        android:id="@+id/none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/none" />

                    <CheckBox
                        android:id="@+id/other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other" />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:visibility="gone"
                            android:id="@+id/other_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/other"
                            android:inputType="text"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/commired_contract_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/commired_contract_qty"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/grade"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/grade"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/min_floor_per_grade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/min_floor_per_grade"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>




                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>