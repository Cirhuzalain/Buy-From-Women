<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/available_resources"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/office_space"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_space" />

                    <CheckBox
                        android:id="@+id/moisture_meter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moisture_meter" />

                    <CheckBox
                        android:id="@+id/weighting_scales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/weighting_scales" />

                    <CheckBox
                        android:id="@+id/qlt_inputs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/qlt_inputs" />

                    <CheckBox
                        android:id="@+id/tractors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tractors" />

                    <CheckBox
                        android:id="@+id/harvester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/harv" />

                    <CheckBox
                        android:id="@+id/dryer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dryer" />

                    <CheckBox
                        android:id="@+id/thresher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/thresher" />

                    <CheckBox
                        android:id="@+id/safe_storage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/safe_storage" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/safe_storage_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/safe_storage_facilities"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/e_other_av_res"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/other_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/other"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>