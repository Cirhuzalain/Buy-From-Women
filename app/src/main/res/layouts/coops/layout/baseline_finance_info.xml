<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/harvsetSeason"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/harvestSeason"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/input_loan"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/input_loan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/input_lprovider"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/input_loan_prov_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bank" />

                    <CheckBox
                        android:id="@+id/input_loan_prov_cooperative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cooperative" />

                    <CheckBox
                        android:id="@+id/input_loan_prov_sacco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sacco" />

                    <CheckBox
                        android:id="@+id/input_loan_prov_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/input_loan_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/input_loan_amount"
                            android:inputType="number"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/input_loan_interest_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/input_loan_interest_rate"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/input_loan_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/input_loan_duration"
                            android:inputType="number"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/inpu_lp_purpose"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/input_loan_purpose_labour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labour" />

                    <CheckBox
                        android:id="@+id/input_loan_purpose_seed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seed" />

                    <CheckBox
                        android:id="@+id/input_loan_purpose_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/input" />

                    <CheckBox
                        android:id="@+id/input_loan_purpose_machinery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/machinery" />

                    <CheckBox
                        android:id="@+id/input_loan_purpose_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/input_loan_disbursement_method"
                            android:textSize="16sp" />

                        <RadioGroup
                            android:id="@+id/input_loan_disbursement_method"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/cash_provided_purchase_inputs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash_provided_purchase_inputs" />

                            <RadioButton
                                android:id="@+id/input_prov_in_kind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/input_prov_in_kind" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/aggrgation_post_harvset_loan"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/aggrgation_post_harvset_loan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/aggreg_harv_l_provider"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_prov_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bank" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_prov_cooperative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cooperative" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_prov_sacco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sacco" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_prov_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/aggrgation_post_harvset_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aggrgation_post_harvset_loan_amount"
                            android:inputType="number"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/aggrgation_post_harvset_loan_interest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aggrgation_post_harvset_loan_interest"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/aggrgation_post_harvset_loan_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aggrgation_post_harvset_loan_duration"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/aggregation_post_harvest_loan_purpose"
                        android:textSize="18sp" />


                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_purpose_labour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labour" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_purpose_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/input" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_purpose_machinery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/machinery" />

                    <CheckBox
                        android:id="@+id/agg_post_harv_loan_purpose_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_res_av" />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/aggrgation_post_harvset_laon_disbursement_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/aggrgation_post_harvset_laon_disbursement_method"
                            android:inputType="text"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>