<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/harvsetSeason"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/harvestSeason"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/agricultural_ext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agri_extension" />

                    <CheckBox
                        android:id="@+id/climate_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/climate_related_information_e_g_weather_forecasts" />

                    <CheckBox
                        android:id="@+id/seeds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seed" />

                    <CheckBox
                        android:id="@+id/organic_fertilizers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/organic_fertilizers" />

                    <CheckBox
                        android:id="@+id/inorganic_fertilizers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inor_fert" />

                    <CheckBox
                        android:id="@+id/labour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labour" />

                    <CheckBox
                        android:id="@+id/irrigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/irrigation_water_pumps" />

                    <CheckBox
                        android:id="@+id/spreader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spreaders_or_sprayers" />


                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>